@model TibiaMvc.Models.SkillViewModel
@{
    ViewBag.Title = "Character details";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["Message"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["MessageError"]</div>
}
<h2>Character details</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CharacterId)</dt>
        <dd>@Html.DisplayFor(model => model.CharacterId)</dd>
