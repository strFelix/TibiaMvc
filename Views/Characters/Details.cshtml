        <dt>@Html.DisplayNameFor(model => model.SwordFigthing)</dt>
        <dd>@Html.DisplayFor(model => model.SwordFigthing)</dd>
        <dt>@Html.DisplayNameFor(model => model.AxeFigthing)</dt>
        <dd>@Html.DisplayFor(model => model.AxeFigthing)</dd>
        <dt>@Html.DisplayNameFor(model => model.DistanceFigthing)</dt>
        <dd>@Html.DisplayFor(model => model.DistanceFigthing)</dd>
        <dt>@Html.DisplayNameFor(model => model.Shielding)</dt>
