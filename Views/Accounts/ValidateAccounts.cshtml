@model TibiaMvc.Models.AccountViewModel
@{
    ViewBag.Title = "Login";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MessageError"]</div>
}

<div class="container" style="border: 1px solid #ccc; border-radius: 10px; padding: 20px; max-width: 50%; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
    <h2>Account Login</h2>
    <hr />
    @using (Html.BeginForm("Validate", "Accounts", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2">Email:</label>
                <div class="col-md-6" style="width: 100%; padding: 10px 0px 10px 0px">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Password:</label>
                <div class="col-md-6" style="width: 100%; padding: 10px 0px 10px 0px">
                    @Html.PasswordFor(model => model.PasswordString, new { @class = "form-control" })
                </div>
            </div>
                <input type="submit" value="Login" class="btn btn-success"  style="width: 100%; font-weight: bold;"/><br />
                <br>
                <p> <a href="/Accounts" style="font-weight: bold; margin-top: 5px;">Register now!</a> </p>
        </div>
    }
</div>