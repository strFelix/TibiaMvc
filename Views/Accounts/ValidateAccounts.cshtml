@model TibiaMvc.Models.AccountViewModel
@{
    ViewBag.Title = "Login";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MessageError"]</div>
}
<h2>Account Login</h2>
<hr />
@using (Html.BeginForm("Validate", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">E-mail</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-6">
                @Html.PasswordFor(model => model.PasswordString, new { @class = "form-control" })
            </div>
        </div><br />
        <input type="submit" value="Login" class="btn btn-success" /><br />
        <div class="form-group">
            <!-- Outra forma de inclusir um link para uma View-->
            <p> <a href="/Accounts">Register now!</a> </p>
        </div>
    </div>
}