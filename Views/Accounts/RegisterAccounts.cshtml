@{
    ViewData["Title"] = "Register";
}

<!--Namespace da classe de Modelo-->
@model TibiaMvc.Models.AccountViewModel
<!--Título da View-->
@{
    ViewData["Title"] = "Register";
}
<!--Configuração de mensagem temporária-->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}
<h2>Create new account</h2>
<hr />

@using (Html.BeginForm("Create", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Username</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">E-mail</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-6">
                @Html.PasswordFor(model => model.PasswordString, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <input type="submit" value="Create" class="btn btn-primary" />
        <!--Exemplo de Link (Texto, View, Controller) -->
    @Html.ActionLink("Return", "Index", "Home", null, new { @class = "btn btn-warning" })
    </div>
}