<!--Namespace da classe de Modelo-->
@model TibiaMvc.Models.AccountViewModel
<!--Título da View-->
@{
    ViewData["Title"] = "Register";
}
<!--Configuração de mensagem temporária-->
@if (@TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MessageError"]
    </div>
}

<div class="container"  style="border: 1px solid #ccc; border-radius: 10px; padding: 20px; max-width: 50%; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
<h2>Create new account</h2>
<hr />

@using (Html.BeginForm("Create", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Username:</label>
            <div class="col-md-6"  style="width: 100%; padding: 10px 0px 10px 0px">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email:</label>
            <div class="col-md-6"  style="width: 100%; padding: 10px 0px 10px 0px">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password:</label>
            <div class="col-md-6"  style="width: 100%; padding: 10px 0px 10px 0px">
                @Html.PasswordFor(model => model.PasswordString, new { @class = "form-control" })
            </div>
        </div>
        <input type="submit" value="Create" class="btn btn-primary" style="font-weight: bold; width: 84%;" />
        <!--Exemplo de Link (Texto, View, Controller) -->
        @Html.ActionLink("Return", "Index", "Home", null, new { @class = "btn btn-warning", @style = "color: white;"})
    </div>
}
</div>